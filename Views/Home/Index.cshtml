@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@model WebApplication2.Models.Client
@{
    Layout = "~/Views/Shared/_LayoutHomePizza.cshtml";
}
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <header class="header-client">
        <nav class="nav-bar-acceuil">
            <a class="nav-bar-acceuil-a" asp-area="" asp-controller="Role" asp-action="Index"> Page d'administration</a>
        </nav>

    </header>

}


<div class="redirect-menu-pizza">
    <img src="/images/main_logo.png" />
    <div class="redirect-menu-link">
        <a href="/Menu" class="link">Voir le menu</a>
    </div>

</div>
