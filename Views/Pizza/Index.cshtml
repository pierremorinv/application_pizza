@model IEnumerable<WebApplication2.Models.Pizza>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p><div class="tableau-container">
<table class="tableau-admin">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vegetarienne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prix)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vegetarienne)
                </td>
                <td>
                    @if (item.Ingredients == null)
                    {
                        <span>Aucun ingrédient </span>

                    }
                    else
                    {
                        @foreach (var ingredient in item.Ingredients)
                        {
                            <span>@ingredient.Nom </span>
                        }
                    }



                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PizzaId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PizzaId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PizzaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
